@model mblyakher_budgeter.Models.Household

@{
    ViewBag.Title = "Leave Household";
}

<div class="col-md-12">
    <div class="widget">
        <div class="widget-head">
            <div class="pull-left">Leave Household</div>
            <div class="widget-icons pull-right">
                <a href="#" class="wminimize"><i class="fa fa-chevron-up"></i></a>
                <a href="#" class="wclose"><i class="fa fa-times"></i></a>
            </div>
            <div class="clearfix"></div>
        </div>

        <div class="widget-content">
            <div class="padd">
                <div class="form quick-post">
                    <div class="row">
                        <div class="col-sm-4 col-sm-offset-4">
                            <div class="well well-lg well-topspace">
                                <h3 class="text-center">Are you sure you want to leave @ViewBag.HouseholdName?</h3>
                                <hr />
                                <section id="loginForm">
                                    @using (Html.BeginForm())
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.HiddenFor(model => model.Id);
                                        <div class="form-actions text-center">
                                            <button type="submit" class="btn btn-default">
                                                <i class="fa fa-trash-o"></i> Leave
                                            </button>
                                            <span class="divider"> | </span>
                                            @Html.ActionLink(linkText: "Cancel", actionName: "Details", controllerName: "Households", routeValues: new { id = ViewBag.HouseholdId }, htmlAttributes: "")
                                        </div>
                                    }
                                </section>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="widget-foot">

            </div>
        </div>

    </div>
</div>

